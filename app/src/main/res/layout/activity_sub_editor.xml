<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editor.SubEditorActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_sub_editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_colorPrimary"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_round_arrow_back"
        tools:title="Modify Animation" />

    <ImageView
        android:id="@+id/iv_sub_editor"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:elevation="4dp"
        android:src="@drawable/ic_round_check"
        app:layout_constraintBottom_toBottomOf="@id/tb_sub_editor"
        app:layout_constraintEnd_toEndOf="@id/tb_sub_editor"
        app:layout_constraintTop_toTopOf="@id/tb_sub_editor" />

    <FrameLayout
        android:id="@+id/fl_content_sub_editor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_sub_editor" />
</android.support.constraint.ConstraintLayout>